{
	"type": "origins:multiple",
	"name": "Miniature",
	"description": "Perhaps the most notable aspect of a dwarf is their size. They are far, far shorter than the average human.",
	"miniature": {
		"type": "origins:action_on_callback",
		"entity_action_chosen": {
			"type": "origins:execute_command",
			"command": "scale set pehkui:base 0.5"
		},
		"entity_action_lost": {
			"type": "origins:execute_command",
			"command": "scale reset pehkui:base"
		},
		"execute_chosen_when_orb": true
	},
